<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:id="@+id/lnFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/feedHrdAva"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_dp"
                    app:riv_corner_radius="360dp"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/feedJobName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Web Programming"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textColor="#393939"
                            android:singleLine="true"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#707070"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"/>

                            <TextView
                                android:id="@+id/feedHrdName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nadhiem Makarim"
                                android:fontFamily="@font/montserrat"
                                android:textSize="15sp"
                                android:textColor="#393939"
                                android:ellipsize="end"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/feedSalary"
                        android:layout_width="125dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_change"
                        android:gravity="center"
                        android:text="Rp 5.000.000"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="15sp"
                        android:textColor="#FF0000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/ic_pin"/>
                        <TextView
                            android:id="@+id/feedJobDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Dibutuhkan programmer fullstack web e-commerce"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textColor="#393939"
                            android:ellipsize="end"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#707070"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_pin_loc"/>
                        <TextView
                            android:id="@+id/feedHrdAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jalan Kenangan No. 71 Bandung"
                            android:fontFamily="@font/montserrat"
                            android:textSize="15sp"
                            android:textColor="#393939"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>