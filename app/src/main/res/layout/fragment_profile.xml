<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.profile.ProfileFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ProgressBar
                    android:id="@+id/profileProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorToolbar"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorAccent"
                    android:max="100"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profileDp"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:src="@drawable/ic_dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="360dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sunari"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="30sp"
                            android:textColor="#515C6F"
                            android:fontFamily="@font/neo_sans_pro_bold"/>
                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:text="sunari@gmail.com"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="15sp"
                            android:textColor="#515C6F"
                            android:fontFamily="@font/montserrat"/>
                        <Button
                            android:id="@+id/btnEdit"
                            android:layout_width="160dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_button_red"
                            android:text="Edit Profile"
                            android:textColor="#FFF"/>
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="25dp"
                android:background="@drawable/bg_purple_rounded">
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etMsisdn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etfName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:inputType="text"
                    android:hint="Full Name"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:inputType="number"
                    android:hint="Age"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:inputType="text"
                    android:hint="Country"
                    android:textColor="#FFF"
                    android:textColorHint="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:enabled="false"/>
                <TextView
                    android:id="@+id/tvUploadCV"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edittex"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="Select CV"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Save"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:background="@drawable/bg_button_green"/>
            </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.design.widget.CoordinatorLayout>