<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorToolbar">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout
                    android:id="@+id/dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/homeDp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_dp"
                        app:riv_corner_radius="360dp"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Welcome"
                            android:fontFamily="@font/neo_sans"
                            android:textSize="18sp"
                            android:textColor="#393939"/>
                        <TextView
                            android:id="@+id/greeting_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Alfarady Raja"
                            android:singleLine="true"
                            android:fontFamily="@font/neo_sans"
                            android:textSize="18sp"
                            android:textColor="#393939"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bellNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notification"/>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar">
            <ProgressBar
                android:id="@+id/homeProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tolbar"
                android:backgroundTint="@color/colorToolbar"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorAccent"
                android:max="100"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient"
            android:orientation="vertical"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="196dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_cardhome">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I want to..."
                            android:fontFamily="@font/neo_sans_pro_bold"
                            android:textSize="17dp"
                            android:textColor="#393939"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <Button
                            android:id="@+id/btnChangeRoles"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_change"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="Change Roles"
                            android:textSize="16dp"
                            android:fontFamily="@font/neo_sans_pro_bold"
                            android:textAllCaps="false"/>
                    </android.support.constraint.ConstraintLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="15dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:rowCount="1">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridPartTime"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/partTimeRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_parttime"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:id="@+id/txtLeftButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Be Mentor"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/partTimeRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridFindJob"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/findJobRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_findwork"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:id="@+id/txtRightButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Be Teacher"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/findJobRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="196dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_cardhome">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categories"
                            android:fontFamily="@font/neo_sans_pro_bold"
                            android:textSize="17dp"
                            android:textColor="#393939"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </android.support.constraint.ConstraintLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="15dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:rowCount="1">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridCatEdu"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/catEduRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_catedu"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Turor"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/catEduRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridCatIT"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/catITRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_catit"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Mentor"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/catITRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="196dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_cardhome">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="News and Articles"
                            android:fontFamily="@font/neo_sans_pro_bold"
                            android:textSize="17dp"
                            android:textColor="#393939"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </android.support.constraint.ConstraintLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="15dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:rowCount="1">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridNews"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/newsRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_news"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="News"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/newsRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/gridArticle"
                            android:layout_width="150dp"
                            android:layout_height="115dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/gridArticleRoundedImgView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bg_article"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:riv_corner_radius="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Articles"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:textSize="20sp"
                                app:layout_constraintBottom_toBottomOf="@+id/gridArticleRoundedImgView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>